{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window"],
		"strict": true,
		"types": ["./src/types.ts"]
	},
	"lint": {
		"files": {
			"include": ["src/"],
			"exclude": ["temp/", ".history"]
		},
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"files": {
			"include": ["src/"],
			"exclude": ["temp/", ".history"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 2,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	}
}
