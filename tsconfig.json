{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"dom",
			"dom.iterable",
			"ESNext.AsyncIterable",
			"deno.ns",
			"deno.unstable"
		],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"traceResolution": true,
		"types": [
			"./src/types.ts"
		]
	},
	"include": ["./src"]
}
